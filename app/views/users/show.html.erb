<div class="user">
  <h2><%= @user.name %></h2>
  <h3><%= @user.wish_title %></h3>
  <%= render @wishes %>
  <h3><%= @user.material_title %></h3>
  <%= render @materials %>
</div>

<% if @user == current_user %>
  <div class="matches">
